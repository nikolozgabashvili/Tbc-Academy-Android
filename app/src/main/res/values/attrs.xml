<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="InputFieldView">
        <attr name="label" format="string" />
        <attr name="hint" format="string" />
        <attr name="startIcon" format="reference" />
        <attr name="endIcon" format="reference" />
        <attr name="textColor" format="color" />
        <attr name="hintColor" format="color" />
        <attr name="android:inputType" />
        <!-- Inherit Android's inputType attribute -->
        <attr name="inputType" format="enum">
            <enum name="standard" value="1" />
            <enum name="password" value="2" />
        </attr>

    </declare-styleable>


    <declare-styleable name="ButtonView">
        <attr name="btnType" format="enum">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
            <enum name="error" value="2" />
        </attr>
        <attr name="btnSize" format="enum">
            <enum name="large" value="0" />
            <enum name="medium" value="1" />
            <enum name="small" value="2" />
        </attr>
        <attr name="btnStartIcon" format="reference" />
        <attr name="btnEndIcon" format="reference" />
        <attr name="text" format="string" />
        <attr name="btnEnabled" format="boolean" />
    </declare-styleable>
</resources>