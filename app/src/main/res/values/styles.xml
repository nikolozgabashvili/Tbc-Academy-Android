<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="app_button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/textSize24</item>
        <item name="android:height">@dimen/size50</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btn_primary" parent="app_button">
        <item name="android:background">@drawable/bg_rounded_primary</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="btn_secondary" parent="app_button">
        <item name="android:background">@drawable/bg_rounded_secondary</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="app_editText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_rounded_secondary</item>
        <item name="android:paddingStart">@dimen/size30</item>
        <item name="android:paddingEnd">@dimen/size30</item>
        <item name="android:height">@dimen/size50</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:drawableTint">@color/primary</item>
        <item name="android:drawablePadding">@dimen/size30</item>
        <item name="android:textSize">@dimen/textSize18</item>

    </style>


</resources>