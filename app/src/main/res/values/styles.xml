<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn_primary</item>
        <item name="android:textColor">@color/primary_button_text_color</item>
        <item name="android:textSize">13sp</item>
    </style>


    <style name="SecondaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn_secondary</item>
        <item name="android:textColor">@color/secondary_button_text_color</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="OutlinedEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_outlined</item>
    </style>

    <style name="round_image">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>