<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/cardsPagerFragment">

    <fragment
        android:id="@+id/cardsPagerFragment"
        android:name="com.example.tbcacademyhomework.bank_cards.cards_pager_screen.CardsPagerFragment"
        android:label="fragment_cards_pager"
        tools:layout="@layout/fragment_cards_pager" >
        <action
            android:id="@+id/action_cardsPagerFragment_to_addCardFragment"
            app:destination="@id/addCardFragment" />
        <action
            android:id="@+id/action_cardsPagerFragment_to_deleteCardBottomSheet2"
            app:destination="@id/deleteCardBottomSheet2" />
    </fragment>
    <fragment
        android:id="@+id/addCardFragment"
        android:name="com.example.tbcacademyhomework.bank_cards.add_card_screen.AddCardFragment"
        android:label="fragment_add_card"
        tools:layout="@layout/fragment_add_card" >
    </fragment>
    <dialog
        android:id="@+id/deleteCardBottomSheet2"
        android:name="com.example.tbcacademyhomework.bank_cards.delete_card.DeleteCardBottomSheet"
        android:label="DeleteCardBottomSheet" >
        <argument
            android:name="card_id"
            app:argType="string" />
    </dialog>
</navigation>