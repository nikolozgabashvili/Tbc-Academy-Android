<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivCover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/base_padding"
                android:layout_marginTop="@dimen/base_padding"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/rounded_imageview_25"
                app:srcCompat="@drawable/img_mount" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/bg_round_icon_btn"
                android:contentDescription="@null"
                android:src="@drawable/icon_arrow_back"
                app:layout_constraintStart_toStartOf="@id/ivCover"
                app:layout_constraintTop_toTopOf="@id/ivCover" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/bg_round_icon_btn"
                android:contentDescription="@null"
                android:src="@drawable/icon_bookmark"
                app:layout_constraintEnd_toEndOf="@id/ivCover"
                app:layout_constraintTop_toTopOf="@id/ivCover" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/containerBlur"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginBottom="29dp"
                android:background="@drawable/bg_radius_15"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/ivCover"
                app:layout_constraintEnd_toEndOf="@id/ivCover"
                app:layout_constraintStart_toStartOf="@id/ivCover">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="22dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvLocationName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        app:fontFamily="@font/inter_semibold"
                        tools:text="mountain name" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPriceKey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/text_gray"
                        android:textSize="16sp"
                        app:fontFamily="@font/roboto"
                        tools:text="price" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginBottom="18dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_location" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/text_gray"
                        android:textSize="18sp"
                        app:fontFamily="@font/roboto"
                        tools:text="location" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/text_gray"
                        android:textSize="26sp"
                        app:fontFamily="@font/roboto_medium"
                        tools:text="$230" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvOverview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_padding"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/text_black"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivCover"
                tools:text="overview" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/text_gray2"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvOverview"
                app:layout_constraintStart_toEndOf="@id/tvOverview"
                tools:text="Details" />

            <FrameLayout
                android:id="@+id/frameTime"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="@dimen/base_padding"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_rounded_rectangle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvOverview">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivTime"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_clock" />
            </FrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/text_gray_lighter"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/frameTime"
                app:layout_constraintStart_toEndOf="@id/frameTime"
                app:layout_constraintTop_toTopOf="@id/frameTime"
                tools:text="8 hours" />

            <FrameLayout
                android:id="@+id/frameTemperature"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_rounded_rectangle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvOverview">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivTemperature"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_cloud" />
            </FrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/text_gray_lighter"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/frameTemperature"
                app:layout_constraintStart_toEndOf="@id/frameTemperature"
                app:layout_constraintTop_toTopOf="@id/frameTemperature"
                tools:text="12 C" />

            <FrameLayout
                android:id="@+id/frameRating"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_rounded_rectangle"
                app:layout_constraintEnd_toStartOf="@+id/tvRating"
                app:layout_constraintTop_toBottomOf="@id/tvOverview">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivRating"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    android:src="@drawable/icon_star" />
            </FrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/text_gray_lighter"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/frameRating"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/frameRating"
                tools:text="12 C" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/base_padding"
                android:layout_marginTop="34dp"
                android:background="@drawable/bg_description"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18sp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/frameTime"
                tools:text="dgahsgdhagvdasvdjasvbbdjhgavdjhahbdvashgvdhgasvdhgasvdhgvashgdvashgvdhagsvdhgjasvdhgavshdvashgjdvahjsgvdhgjasvdhjgasvdhjgasvhgjdvashgjdvhagsvdhgjsavdhgjsavdhgasv" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBook"
        style="@style/PrimaryButton"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginHorizontal="@dimen/base_padding"
        android:layout_marginBottom="20dp"
        android:drawableEnd="@drawable/icon_send"
        android:fontFamily="@font/roboto_medium"
        android:paddingHorizontal="100dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        tools:text="book now" />
</LinearLayout>