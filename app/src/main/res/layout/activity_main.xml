<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/app_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/btnLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_page_bg" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivLogo"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/ic_photo"
        app:layout_constraintBottom_toBottomOf="@id/app_bg"
        app:layout_constraintEnd_toStartOf="@id/tvAppName"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/app_bg"
        app:layout_constraintTop_toTopOf="@id/app_bg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:fontFamily="@font/comfortaa"
        android:textColor="@color/black"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@id/app_bg"
        app:layout_constraintEnd_toEndOf="@id/app_bg"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/ivLogo"
        app:layout_constraintTop_toTopOf="@id/app_bg"
        android:text="@string/photo" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivAuthor"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="@dimen/base_margin"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@id/app_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/round_image"
        app:srcCompat="@drawable/img_example_author" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAuthorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/example_name"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ivAuthor"
        app:layout_constraintTop_toTopOf="@id/ivAuthor" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAuthorUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/example_username"
        android:textColor="@color/gray"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/ivAuthor"
        app:layout_constraintStart_toEndOf="@id/ivAuthor"
        app:layout_constraintTop_toBottomOf="@id/tvAuthorName"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        style="@style/SecondaryButton"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="@dimen/base_margin"
        android:layout_marginBottom="20dp"
        android:text="@string/login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnRegister"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegister"
        style="@style/PrimaryButton"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="@dimen/base_margin"
        android:layout_marginBottom="20dp"
        android:text="@string/register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnLogin"
        app:layout_constraintVertical_chainStyle="packed" />


</androidx.constraintlayout.widget.ConstraintLayout>