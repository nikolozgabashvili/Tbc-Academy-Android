<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size20"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivUser"
            android:layout_width="@dimen/size100"
            android:layout_height="@dimen/size100"
            android:layout_margin="@dimen/size20"
            android:background="@color/gray"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/circle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvUserFullName"
            android:layout_width="@dimen/size50"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/size20"
            android:background="@color/gray"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize20"

            app:layout_constraintBottom_toTopOf="@id/tvUserStatus"
            app:layout_constraintStart_toEndOf="@id/ivUser"
            app:layout_constraintTop_toTopOf="@id/ivUser"
            app:layout_constraintVertical_chainStyle="packed" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvUserStatus"
            android:layout_width="@dimen/size100"
            android:layout_height="@dimen/size20"
            android:layout_marginStart="@dimen/size20"
            android:layout_marginTop="@dimen/size4"
            android:background="@color/gray"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize14"
            app:layout_constraintBottom_toTopOf="@id/tvUserAbout"
            app:layout_constraintStart_toEndOf="@id/ivUser"
            app:layout_constraintTop_toBottomOf="@id/tvUserFullName" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvUserAbout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size20"
            android:layout_marginTop="@dimen/size4"
            android:background="@color/gray"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize14"
            app:layout_constraintBottom_toBottomOf="@+id/ivUser"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/ivUser"
            app:layout_constraintTop_toBottomOf="@id/tvUserStatus"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>