<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.register.RegisterFragment">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnBack"
        android:layout_width="@dimen/size50"
        android:layout_height="@dimen/size50"
        android:layout_marginStart="@dimen/app_margin"
        android:layout_marginTop="@dimen/app_margin"
        android:background="@drawable/bg_button_back"
        android:contentDescription="@string/back_button"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50"
        android:layout_marginHorizontal="@dimen/app_margin"
        android:layout_marginTop="@dimen/size40"
        android:background="@drawable/bg_input"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="@dimen/size20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBack" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50"
        android:layout_marginHorizontal="@dimen/app_margin"
        android:layout_marginTop="@dimen/size20"
        android:background="@drawable/bg_input"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingHorizontal="@dimen/size20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etEmail" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etRepeatPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50"
        android:layout_marginHorizontal="@dimen/app_margin"
        android:layout_marginTop="@dimen/size20"
        android:background="@drawable/bg_input"
        android:hint="@string/repeatPassword"
        android:inputType="textPassword"
        android:paddingHorizontal="@dimen/size20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etPassword" />


    <com.example.tbcacademyhomework.presentation.views.ButtonView
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/app_margin"
        android:layout_marginTop="@dimen/size40"
        app:layout_constraintTop_toBottomOf="@id/etRepeatPassword"
        app:text="@string/register" />

</androidx.constraintlayout.widget.ConstraintLayout>