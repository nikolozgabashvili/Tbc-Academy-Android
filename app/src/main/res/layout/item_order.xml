<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/size20"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="@dimen/size10"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/size1"
    app:strokeColor="@color/stroke">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size25"
            android:layout_marginTop="@dimen/size18"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/textSize18"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Order: #1232" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size12"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/neutrals4"
            app:layout_constraintBottom_toBottomOf="@id/tvOrderId"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvOrderId"
            tools:text="13/05/2022" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTrackingNumberKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size25"
            android:layout_marginTop="@dimen/size24"
            android:fontFamily="sans-serif-medium"
            android:text="@string/tracking_number"
            android:textColor="@color/neutrals4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOrderId" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTrackingNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size10"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/tvTrackingNumberKey"
            app:layout_constraintStart_toEndOf="@id/tvTrackingNumberKey"
            app:layout_constraintTop_toTopOf="@id/tvTrackingNumberKey"
            tools:text="IK287368838" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvQuantityKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size25"
            android:layout_marginTop="@dimen/size24"
            android:fontFamily="sans-serif-medium"
            android:text="@string/quantity"
            android:textColor="@color/neutrals4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTrackingNumberKey" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size10"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/tvQuantityKey"
            app:layout_constraintStart_toEndOf="@id/tvQuantityKey"
            app:layout_constraintTop_toTopOf="@id/tvQuantityKey"
            tools:text="2" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSubtotalKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size10"
            android:fontFamily="sans-serif-medium"
            android:text="@string/subtotal"
            android:textColor="@color/neutrals4"
            app:layout_constraintBottom_toBottomOf="@id/tvSubtotal"
            app:layout_constraintEnd_toStartOf="@id/tvSubtotal"
            app:layout_constraintTop_toTopOf="@id/tvSubtotal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSubtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size10"
            android:layout_marginEnd="@dimen/size20"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tvQuantityKey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvQuantityKey"
            tools:text="$100" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size25"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintBottom_toBottomOf="@id/btnDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnDetails"
            tools:text="PENDING" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDetails"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size35"

            android:layout_marginTop="@dimen/size20"
            android:layout_marginEnd="@dimen/size12"
            android:layout_marginBottom="@dimen/size15"
            android:background="@drawable/bg_outlined"
            android:fontFamily="sans-serif-medium"
            android:paddingStart="@dimen/size26"
            android:paddingEnd="@dimen/size30"
            android:text="@string/details"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize14"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubtotalKey" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>