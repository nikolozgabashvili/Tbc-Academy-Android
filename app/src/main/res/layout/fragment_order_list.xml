<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderListFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOrders"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size20"
        android:layout_marginTop="@dimen/size20"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/my_orders"
        android:textSize="@dimen/textSize18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPending"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size28"
        android:layout_marginTop="@dimen/size32"
        android:background="@drawable/bg_btn_gray"
        android:fontFamily="sans-serif-medium"
        android:text="@string/pending"
        android:textAllCaps="false"
        app:layout_constraintEnd_toStartOf="@id/btnDelivered"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvOrders" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDelivered"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size28"
        android:background="@drawable/bg_btn_gray"
        android:fontFamily="sans-serif-medium"
        android:text="@string/delivered"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@id/btnPending"
        app:layout_constraintEnd_toStartOf="@id/btnCancelled"
        app:layout_constraintStart_toEndOf="@id/btnPending"
        app:layout_constraintTop_toTopOf="@id/btnPending" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancelled"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size28"
        android:background="@drawable/bg_btn_gray"
        android:fontFamily="sans-serif-medium"
        android:text="@string/cancelled"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@id/btnDelivered"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnDelivered"
        app:layout_constraintTop_toTopOf="@id/btnDelivered" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOrders"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/size12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnPending" />

</androidx.constraintlayout.widget.ConstraintLayout>